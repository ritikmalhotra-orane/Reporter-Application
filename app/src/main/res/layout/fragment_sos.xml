<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SosFragment">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="3"
        >
        <ImageView
            android:id="@+id/ivAmbulance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_ambulance"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/ivFire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_fire_truck"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivPolice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_police_car"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ambulance"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Fire Brigade"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Police"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on any one to call in emergency situtation"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        android:gravity="center"
        android:textSize="8dp"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="?colorOnSecondary"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>